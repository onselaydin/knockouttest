    @Scripts.Render("~/Scripts/Models/cssbinding_.js")
}
<h2>cssbinding</h2>

<div data-bind="css: { redStyle: favoriteColor() == 'red',
greenStyle: favoriteColor() == 'green' }">onsel's favorite color is<span data-bind="text: favoriteColor"></span>.</div>