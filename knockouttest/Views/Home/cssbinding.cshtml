
@{
    ViewBag.Title = "cssbinding";
}
<style type="text/css">
    .redStyle {
        color: red;
    }

    .greenStyle {
        color: green;
    }
</style>

@*<script src='@Url.Content("~/Scripts/Models/cssbinding_.js")'></script>*@

